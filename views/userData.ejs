
    <%- include ('header.ejs') %>
      <div class="user-form-container">
        <h2>Ver/Editar Mis Datos</h2>
            


        <form class="user-form" method="POST" action="/user-data-update">
            
            <label for="username">Nombre de usuario:</label>
            <input type="text" id="username" name="username" placeholder="Nombre de usuario" enabled value = <%= userData.email %>>

            <label for="name">Nombre:</label>
            <input type="text" id="name" name="name" placeholder="Nombre" value = <%= userData.name %> >

            <label for="country">País:</label>
            <input type="text" id="country" name="country" placeholder="País" value = <%= userData.country %>>

            <button type="submit" class="submit-btn">Guardar Cambios</button>
            
            <section id="notifications-container">

                  <!-- Mensajes de error -->
                  <% if (typeof error !== 'undefined') { %>
                      <div class="notification-error">
                          <%= error %>
                      </div>
                  <% } %>

                  <!-- Mensajes de éxito -->
                  <% if (typeof success !== 'undefined') { %>
                      <div class="notification-success">
                          <%= success %>
                      </div>
                  <% } %>

            </section>


        </form>
    </div>
    <%- include ('footer.ejs') %>